  <link href="http://fonts.googleapis.com/css?family=Nobile" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

</head>

<section class="main group">

  <section class='group display1'>


    <% if !current_user.nil? %>

    <div class='form-div margin-right'>
      <h3>Make a new form!</h3>
      <a class="button-link formCreate-button" href="/users/<%=current_user.id%>/forms/new">Click here!</a>
    </div>
    <!-- test -->

    <div class='form-div margin-right'>
      <h3>See Your Forms</h3>
      <a class="button-link formCreate-button" href='<%= user_forms_url(current_user.id)%>'>Click here!</a>
    </div>

    <% else %>

    <div class='form-div newUser-div margin-right'>
      <h3>Join as a new user</h3>
      <a class="button-link formCreate-button" href='<%= new_user_url%>'>Click here!</a>
    </div>

    <% end %>

    <section class="title">
      <h2>PseudooWufoo</h2>
    </section>

    <% if current_user %>
    <div class='login-info'>
      <ul>
        <li>Logged in as: <strong><%= current_user.name %></strong></li>

        <% if current_user.guest != nil %>
          <li><%= button_to "Become a member", new_user_url, method: :get, class: '.nav-button' %></li>
        <li><%= button_to "Logout", session_url, method: :delete, class: '.nav-button' %></li>
        <% end %>
        <li><%= button_to "Logout", session_url, {method: :delete, class: 'login'} %></li>
    <% end %>
      </ul>
    </div>


    <% if !flash[:error].nil? %>
      <div id="error">
        <p><%= flash[:error] %></p>
        <div class="clear"></div>
      </div>
    <% end %>



 <%= yield %>

  </section>
</section>

